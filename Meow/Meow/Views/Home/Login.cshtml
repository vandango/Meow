@model Meow.Models.Profile.ProfileCatModel

@{
    ViewBag.Title = "Login";
}

<h1>Login</h1>

<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" for="Username">Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Username" placeholder="Der Katzenname">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Password">Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="Password" placeholder="Das Katzenpasswort">
        </div>
    </div>
    <div class="form-horizontal">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" value="Login" class="btn btn-default">Login</button>
            <a href="/Account/RegisterCat" class="button">Register?</a>
        </div>
    </div>
</form>
