@model Meow.Models.Profile.ProfileCatModel
@using Meow.Code.Model

@{
    ViewBag.Title = "Katzenprofil";

    Cat me = null;
    if (Session[Constants.CURRENT_CAT_KEY] != null)
    {
        me = (Cat)Session[Constants.CURRENT_CAT_KEY];
    }
}

<h1>Das Profil der Katze</h1>

<form method="get">
       
    <!---->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Katzenname</th>
                <th>Passwort</th>
                <th>E-Mail</th>
                <th>Kätzchen seit</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Username</td>
                <td>@Model.Password</td>
                <td>@Model.Email</td>
                <td>@Model.CreatedAt</td>
                <td>
                @if (me.Username != Model.Username)
                {
                    <text>&dash;</text>
                    if (Model.CatsFollowing.Any(c => c.Id == me.Id))
                        //testeme!!
                    {
                        <a href="/Follower/Follow/@Model.Id?returnUrl=@HttpUtility.UrlEncode(this.Request.Url.PathAndQuery)">Moew?</a>
                    }
                    else
                    {
                        <a href="/Follower/Unfollow/@Model.Id?returnUrl=@HttpUtility.UrlEncode(this.Request.Url.PathAndQuery)">Please no moew!</a>
                    }
                }
                </td>
            </tr>
        </tbody>
    </table>
  

</form>