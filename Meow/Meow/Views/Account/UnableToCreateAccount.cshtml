
@{
    ViewBag.Title = "Fehler beim Registrieren der Katze";
}

<h1>Es ist ein Fehler aufgetreten:</h1>

@Server.GetLastError().Message

<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" for="Username">Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Username" placeholder="Der Katzenname">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Email">Email:</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="Email" placeholder="Die E-Mailadresse der Katze">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="Password">Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="Password" placeholder="Das Katzenpasswort">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" value="Registrieren" class="btn btn-default">Registrieren</button>
        </div>
    </div>
</form>
